master.vm.provision "chef_zero" do |chef|
      chef.cookbooks_path = "dice-chef-repo/cookbooks"
      chef.nodes_path = "nodes"
      chef.channel = "stable"
      chef.version = "12.10.24"

	  chef.add_recipe "dice_common::host"      
	  chef.add_recipe "apt::default"
      chef.add_recipe "java::default"
      
      chef.add_recipe "kafka::default"
      chef.add_recipe "kafka::configure"

      chef.json = {
        "java" => {
            "jdk_version" => "8",
            "install_flavor" => "openjdk"
        }
    end
